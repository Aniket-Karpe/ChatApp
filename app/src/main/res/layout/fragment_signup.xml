            android:id="@+id/las_loading"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_speed="1"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_fileName="anim_loading.json"
            android:visibility="gone"/>

        <Button
